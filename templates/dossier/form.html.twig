{% extends "base.html.twig" %}
{% block title %}
    {{ page_title }}
{% endblock %}
{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    {{ form_label(form.type) }}<br/>
                    {{ form_widget(form.type) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.firstName) }}<br/>
                    {{ form_widget(form.firstName) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.secondName) }}<br/>
                    {{ form_widget(form.secondName) }}
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    {{ form_label(form.address) }}<br/>
                    {{ form_widget(form.address) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.cardNumber) }}<br/>
                    {{ form_widget(form.cardNumber) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.cvv) }}<br/>
                    {{ form_widget(form.cvv) }}
                </div>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Save</button>
        {{ form_end(form) }}
    </div>
{% endblock %}